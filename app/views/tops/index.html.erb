<div class="container mx-auto p-4">
  <!-- ヘッダー部分 -->
  <div class="flex justify-between items-center my-6"> <!-- justify-between でタイトルとフラッシュメッセージを分ける -->
    <h1 class="text-4xl">この中で一番思い出感があるフォントは？？</h1>
    <div id="flash" class="text-red-500"></div> <!-- フラッシュメッセージを右に -->
  </div>

  <!-- フォント表示部分 -->
  <div class="container mx-auto p-4">
    <div class="grid grid-cols-1 gap-8">
      <% @fonts.each do |font| %>
        <div class="p-6 shadow-lg rounded-lg bg-white">
          <!-- フォント表示部分 -->
          <p class="<%= font.class_name %> text-5xl mb-4">
            <%= font.name %> <br>
            思い出 おもいで omoide memory ....
          </p>


          <div class="flex justify-end items-center">
            <p class="text-lg font-bold mr-4">いいね数: <%= font.likes_count %></p>

            <div>
              <%= form_with url: font_likes_path(font.id), method: :post, local: false do %>
                <button type="submit" class="btn px-4 py-2">いいね</button>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

